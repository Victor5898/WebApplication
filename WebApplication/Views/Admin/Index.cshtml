
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Admin Page";
}

@model WebApplication.Models.userData

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Basic Tables </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tables</a></li>
                <li class="breadcrumb-item active" aria-current="page">Date despre utilizatori si servicii</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Utilizatori</h4>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> Id </th>
                                    <th> Username </th>
                                    <th> Email </th>
                                    <th> Password </th>
                                    <th> lastLogin </th>
                                    <th> UserIP </th>
                                    <th> Role </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var users = Model.users;
                                    if (users.Count > 0)
                                    {
                                        foreach (var u in users)
                                        {
                                            <tr>
                                                <td> @u.Id </td>
                                                <td> @u.Username </td>
                                                <td> @u.Email </td>
                                                <td> @u.Password </td>
                                                <td> @u.lastLogin </td>
                                                <td> @u.UserIp </td>
                                                <td> @u.Level </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>Nu au fost gasiti utilizatori</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lista serviciilor</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-contextual">
                            <thead>
                                <tr>
                                    <th> Id </th>
                                    <th> Name </th>
                                    <th> Description </th>
                                    <th> Image Path </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var services = Model.services;
                                    if (services.Count > 0)
                                    {
                                        foreach (var s in services)
                                        {
                                            <tr class="table-info">
                                                <td> @s.Id </td>
                                                <td> @s.Name </td>
                                                <td> @s.Description </td>
                                                <td> @s.Image </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr class="table-info">
                                            <td> Nu au fost gasite servicii </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lista angajatiilor</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-contextual">
                            <thead>
                                <tr>
                                    <th> Id </th>
                                    <th> Name </th>
                                    <th> Image Path </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var workers = Model.staff;
                                    if (workers != null && workers.Count > 0)
                                    {
                                        foreach (var w in workers)
                                        {
                                            <tr class="table-info">
                                                <td> @w.Id </td>
                                                <td> @w.Name </td>
                                                <td> @w.Image </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr class="table-info">
                                            <td> Nu au fost gasiti angajatii </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

